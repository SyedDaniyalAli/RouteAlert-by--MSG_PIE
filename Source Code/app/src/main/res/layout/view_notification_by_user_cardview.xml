               android:alpha="@android:integer/config_longAnimTime"
               android:visibility="visible" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="350sp"
                android:layout_height="wrap_content">

            <TextView
                android:text="@string/notification_id"
                android:padding="3sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/msg_view_notfication_by_user_id"
                    android:textColor="#ffffff"
                    android:background="#ff0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffff"
                android:background="#ff0000"
                android:textSize="14sp"
                android:padding="3sp"
                android:text="@string/alert"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/msg_view_notfication_by_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="@string/location"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/msg_view_notfication_by_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="Date:"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/msg_view_notfication_by_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="@string/time"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/msg_view_notfication_by_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="@string/description"
                android:textStyle="bold" />


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
