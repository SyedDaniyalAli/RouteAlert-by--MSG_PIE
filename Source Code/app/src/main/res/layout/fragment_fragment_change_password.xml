<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentChangePassword">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:id="@+id/AddDetail"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="25dp"
        android:translationZ="10dp"
        tools:ignore="UnusedAttribute">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:text="@string/change_your_passowrd_here"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#1BBC9B"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/line_background" />


        <android.support.v7.widget.FitWindowsLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--CurrentPassword-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="8dp"
                    android:padding="5dp">
                    <!--@string/password-->
                    <EditText
                        android:id="@+id/msg_Admin_CurrentPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:drawableStart="@drawable/ic_lock_black_24dp"
                        android:hint="@string/current_passowrd"
                        android:imeOptions="flagNoExtractUi"

                        android:inputType="textPassword" />
                </android.support.design.widget.TextInputLayout>

                <!--New Password-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:padding="5dp">
                    <!--@string/password-->
                    <EditText
                        android:id="@+id/msg_Admin_NewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:drawableStart="@drawable/ic_lock_black_24dp"
                        android:hint="@string/new_passowrd"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="textPassword" />
                </android.support.design.widget.TextInputLayout>

                <!--ConfirmPassword-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="8dp"
                    android:padding="5dp">
                    <!--@string/password-->
                    <EditText
                        android:id="@+id/msg_Admin_ConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:drawableStart="@drawable/ic_lock_black_24dp"
                        android:hint="@string/confirm_passowrd"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="textPassword" />
                </android.support.design.widget.TextInputLayout>


                <Button
                    android:id="@+id/msg_Btn_Admin_ChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:padding="15dp"
                    android:text="@string/change_passowrd"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </android.support.v7.widget.LinearLayoutCompat>


        </android.support.v7.widget.FitWindowsLinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>