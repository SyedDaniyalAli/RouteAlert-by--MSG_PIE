<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="20dp">

        <ImageView
            android:src="@drawable/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/logo_image" />

        <TextView
            android:text="@string/route_alert"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/msg_mainactivitycardviewnotification"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:translationZ="0dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="5dp"
            tools:ignore="UnusedAttribute">

            <LinearLayout
                android:id="@+id/view_user_notificaion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_notifications_active_black_24dp"
                    android:fontFamily="@font/cambay_italic"
                    android:padding="5dp"
                    android:text="@string/view_notification"
                    android:textAlignment="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="View Notification" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/msg_mainactivitycardviewSubmitComplains"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:translationZ="0dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="5dp"
            tools:ignore="UnusedAttribute">

            <LinearLayout
                android:id="@+id/view_user_Submit_Complain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:drawableStart="@drawable/ic_message_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/cambay_italic"
                    android:padding="5dp"
                    android:text="@string/submit_complains"
                    android:textAlignment="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Submit Complains" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/msg_mainactivitycardviewcheckstatuscomplain"
            android:layout_width="match_parent"

            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:translationZ="0dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="5dp"
            tools:ignore="UnusedAttribute">

            <LinearLayout
                android:id="@+id/view_user_Check_Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_check_black_24dp"
                    android:fontFamily="@font/cambay_italic"
                    android:padding="5dp"
                    android:text="@string/check_status_of_complains"
                    android:textAlignment="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Check Status Of Complains" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/msg_mainactivitycardviewemergencyhelp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:translationZ="0dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="5dp"
            tools:ignore="UnusedAttribute">

            <LinearLayout
                android:id="@+id/view_user_Emergency"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_emergency_black_24dp"
                    android:fontFamily="@font/cambay_italic"
                    android:padding="5dp"

                    android:text="@string/emergenecy_help"
                    android:textAlignment="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Emergenecy Help" />

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/msg_mainactivitycardviewfeedback"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:translationZ="0dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/view_user_Feedback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_feedback_down_black_24dp"
                    android:fontFamily="@font/cambay_italic"
                    android:padding="5dp"
                    android:text="@string/feed_back"
                    android:textAlignment="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Feed Back" />
            </LinearLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:translationZ="0dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/view_user_Logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_logout_24dp"
                android:fontFamily="@font/cambay_italic"
                android:padding="5dp"
                android:text="@string/logout"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorRed"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Logout" />
        </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>